<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/remote_preview_layout" >

    <RelativeLayout
        android:layout_width="@dimen/remote_preview_width"
        android:layout_height="@dimen/remote_preview_height"
        android:background="#cc333333"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/screenshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_action_add_custom" />

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="Remote Name"
            android:textColor="#fff"
            android:textSize="12sp" />

        <com.doubtech.universalremote.widget.ScalePreviewView
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/label"
            android:layout_margin="2dp"
            android:background="@drawable/background" />
    </RelativeLayout>

</FrameLayout>